@using Microsoft.AspNetCore.Mvc.Localization
@model RegistroViewModel
@inject IViewLocalizer localizer;

@{
	ViewData["Title"] = "Registro de Usuario";
}

<h1>@localizer["registrate"]</h1>

<div class="card">
	<div class="card-body">
		<form asp-action="Registro">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" autocomplete="off" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<button class="btn-primary btn">@localizer["registrate"]</button>
			<a class="btn btn-success" asp-action="login">@localizer["login-boton"]</a>
			
			<a class="btn btn-success" asp-action="LoginExterno" asp-route-proveedor="Microsoft">
				<i class="bi bi-microsoft"></i> @localizer["microsoft-signin-boton"]
			</a>
		
		</form>
	</div>
</div>

@section Scripts {
	// Activando la funcionalidad de los scripts para validación de JQuery
	<partial name="_ValidationScriptsPartial" /> 
}